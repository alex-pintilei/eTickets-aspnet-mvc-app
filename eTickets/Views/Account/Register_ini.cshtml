@using eTickets.Data.ViewModels

@model RegisterVM

@{
    ViewData["Title"] = "Sign up for a new account";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4 class="DMText">Sign up for a new account</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <div><b>Sorry!</b> - @TempData["Error"]</div>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register" method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="FullName" class="control-label DMText"></label>
                        <input asp-for="FullName" class="form-control" />
                        <div asp-validation-for="FullName" class="text-danger"></div>
                    </div>

                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label DMText"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <div asp-validation-for="EmailAddress" class="text-danger"></div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label DMText"></label>
                        <input asp-for="Password" class="form-control" />
                        <div asp-validation-for="Password" class="text-danger"></div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label DMText"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <div asp-validation-for="ConfirmPassword" class="text-danger"></div>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right DarkMode" type="submit" value="Sign up" />
                        <a class="btn btn-outline-secondary DMText" asp-controller="Movies" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>